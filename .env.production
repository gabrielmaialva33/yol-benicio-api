# Production Environment Configuration for Yol Benício Legal Management System
# Copy this file to .env and update the values for your production environment

# App Configuration
TZ=America/Sao_Paulo
PORT=3333
HOST=0.0.0.0
LOG_LEVEL=info
APP_KEY=YOUR_32_CHARACTER_APP_KEY_HERE
NODE_ENV=production
SESSION_DRIVER=cookie
APP_URL=https://benicio.mahina.cloud

# Security
CORS_ENABLED=true
CORS_ORIGIN=https://benicio.mahina.cloud
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE
CORS_HEADERS=Content-Type,Authorization,Accept,X-Requested-With

# JWT Configuration
ACCESS_TOKEN_SECRET=your-production-access-token-secret-min-32-chars
REFRESH_TOKEN_SECRET=your-production-refresh-token-secret-min-32-chars

# Database Configuration (PostgreSQL with TimescaleDB)
DB_HOST=postgres
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your-secure-postgres-password
DB_DATABASE=yol_benicio_production
DB_SSL=false

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your-secure-redis-password
REDIS_DB=0

# Queue Configuration (Redis-based)
QUEUE_REDIS_HOST=redis
QUEUE_REDIS_PORT=6379
QUEUE_REDIS_PASSWORD=your-secure-redis-password
QUEUE_REDIS_DB=1

# Rate Limiter
LIMITER_STORE=redis
LIMITER_MAX_REQUESTS=100
LIMITER_WINDOW_SECONDS=900

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@domain.com
SMTP_PASS=your-app-password
SMTP_FROM_ADDRESS=noreply@benicio.mahina.cloud
SMTP_FROM_NAME="Yol Benício - Sistema Jurídico"

# File Storage Configuration
DRIVE_DISK=s3

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=sa-east-1
S3_BUCKET=yol-benicio-production
S3_FORCE_PATH_STYLE=false

# Digital Ocean Spaces (Alternative to S3)
SPACES_KEY=your-spaces-key
SPACES_SECRET=your-spaces-secret
SPACES_REGION=nyc3
SPACES_BUCKET=yol-benicio-production
SPACES_ENDPOINT=https://nyc3.digitaloceanspaces.com

# Cloudflare R2 (Alternative to S3)
R2_KEY=your-r2-key
R2_SECRET=your-r2-secret
R2_BUCKET=yol-benicio-production
R2_ENDPOINT=https://your-account.r2.cloudflarestorage.com

# Google Cloud Storage (Alternative to S3)
GCS_KEY=file://./gcs_key.json
GCS_BUCKET=yol-benicio-production

# Social Authentication (Optional)
DISCORD_CLIENT_ID=your-discord-client-id
DISCORD_CLIENT_SECRET=your-discord-client-secret

FACEBOOK_CLIENT_ID=your-facebook-client-id
FACEBOOK_CLIENT_SECRET=your-facebook-client-secret

GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

SPOTIFY_CLIENT_ID=your-spotify-client-id
SPOTIFY_CLIENT_SECRET=your-spotify-client-secret

TWITTER_CLIENT_ID=your-twitter-client-id
TWITTER_CLIENT_SECRET=your-twitter-client-secret

# Monitoring and Analytics (Optional)
SENTRY_DSN=your-sentry-dsn
NEW_RELIC_LICENSE_KEY=your-newrelic-license-key
DATADOG_API_KEY=your-datadog-api-key

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=yol-benicio-backups

# Performance
MAX_UPLOAD_SIZE=50mb
REQUEST_TIMEOUT=30000
KEEP_ALIVE_TIMEOUT=5000

# Feature Flags
ENABLE_REGISTRATION=false
ENABLE_PASSWORD_RESET=true
ENABLE_TWO_FACTOR=false
ENABLE_AUDIT_LOG=true

# Frontend Configuration
VITE_USE_MSW=false
VITE_API_URL=https://benicio.mahina.cloud/api/v1